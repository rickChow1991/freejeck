using UnityEngine;
using System.Collections;
using System;
/// <summary>
/// ClassName:ITrick
/// Date:Wed Apr  8 15:09:14 2015
/// Author: albin
/// Description:  机关接口
/// </summary>
namespace com.iuixi.main
{
        /// <summary>
        ///   机关触发的时候,完成的百分比
        /// </summary>
        public class TrickEventArgs : EventArgs {
                public float Percent { get; private set;}
                public TrickEventArgs(float percent){
                        this.Percent = percent;
                }
        }
        
        /// <summary>
        ///   机关的接口
        /// </summary>
        public interface ITrick
        {
                /// <summary>
                ///   机关的名称
                /// </summary>
                stirng name{ get; private set;}

                /// <summary>
                ///   当机关触发的时候
                /// </summary>
                void OnTrick();

                /// <summary>
                ///   当进入机关的时候, 有一些机关,有进入和离开的状态,这里我不好判断了
                /// </summary>
                void OnEnterTrick();

                /// <summary>
                ///   当离开机关的时候
                /// </summary>
                void OnExitTrick();

                /// <summary>
                ///   机关状态的更新
                /// </summary>
                void OnStateUpdate(float dt);
        }        
}

